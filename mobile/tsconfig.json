{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".",
    "skipLibCheck": true,
    "paths": {
      "@/*": ["./*"],
      "@shared": ["../shared/src"],
      "@shared/*": ["../shared/src/*"]
    }
  },
  "include": ["**/*.ts", "**/*.tsx", ".expo/types/**/*.ts", "expo-env.d.ts", "types/**/*.d.ts"],
  "exclude": ["node_modules", "babel.config.js", "metro.config.js", "dist", "**/__tests__/**"]
}
