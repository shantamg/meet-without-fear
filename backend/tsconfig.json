{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "..",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "baseUrl": "..",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "paths": {
      "@shared/*": ["shared/src/*"],
      "@meet-without-fear/shared": ["shared/src/index.ts"]
    }
  },
  "include": [
    "src/**/*",
    "../shared/src/*.ts",
    "../shared/src/contracts/*.ts",
    "../shared/src/dto/**/*.ts",
    "../shared/src/validation/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "**/__tests__/**",
    "**/*.test.ts"
  ]
}
